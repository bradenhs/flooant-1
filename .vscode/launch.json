{
  // launch.json
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
      "args": [
        "-r",
        "tsconfig-paths/register",
        "${workspaceFolder}/server/main/index.ts"
      ],
      "restart": true
    }
  ]
}
